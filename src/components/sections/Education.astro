---
import Section from "@/components/Section.astro"
import { education } from "@cv";
const month = [
    "Enero",
    "Febrero",
    "Marzo",
    "Abril",
    "Mayo",
    "Junio",
    "Julio",
    "Agosto",
    "Septiembre",
    "Octubre",
    "Noviembre",
    "Diciembre",
    ]
---

<Section title = "EducaciÃ³n">
    <ul>
        {
            education.map(
                ({
                    institution,
                    area,
                    studyType,
                    startDate,
                    endDate,
                    score,
                    skills,
                    url,
                }) => {
                    const startYear = new Date(startDate).getFullYear();
                    const startMonth = new Date(startDate).getMonth();
                    const endYear =
                        endDate != null
                            ? new Date(endDate).getFullYear()
                            : "Actual";
                    const endMonth = 
                        endDate != null
                        ? new Date(endDate).getMonth()
                        : 10;
                    const years = `${startYear} / ${month[startMonth]} - ${endYear}${(endYear!="Actual")?' / '+month[endMonth]:""}`;
                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{institution}</h3>
                                        <h4>{area}</h4>
                                    </div>
                                    <time >{years}</time>
                                </header>
                                
                                <footer>
                                    {skills.map(sumaryParagraph =>{
                                        return (<span>{sumaryParagraph}</span>)
                                    }
                                    )}
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Section>
<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    article h3 {
        font-weight: 500;
        color: #111;
    }
    article h4 {
        font-weight: 400;
        color: #222;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        color: #555;
        font-size: 0.85rem;
    }
    footer{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    span{
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>