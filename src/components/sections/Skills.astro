---
import Section from "@/components/Section.astro";
import { skills, awards } from "@cv";
const awardTitle = awards[0].awarder
---

<Section title="Aptitudes">
    <ul>
        {
            skills.map(({ name }) => (
                <li>
                    <span>{name}</span>
                </li>
            ))
        }
    </ul>
</Section>
<Section title="Logros">
    <ul>
            <li>{awardTitle}</li>
    </ul>
</Section>"
<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    li {
        /* border-radius: 6px; */
        /* background: #eee; */
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>