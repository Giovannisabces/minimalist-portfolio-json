---
import Section from "@/components/Section.astro";
import { projects } from "@cv";
---

<Section title="Proyectos">
    <ul>
        {
            projects.map(
                ({ url, description, highlights, name }) => {
                    return (
                        <li>
                            <article>
                                <header>
                                    <a
                                        href={url}
                                        title={`Ver el proyecto ${name}`}
                                        target="_blank"
                                    >
                                        <h3>{name}</h3>
                                    </a>
                                    <p>{description}</p>
                                </header>
                                <footer >
                                        {
                                            highlights.map((highlight) => {
                                                return (
                                                    <span>{highlight}</span>
                                                )
                                            })
                                        }
                                </footer>
                            </article>
                        </li>
                    )
            })
        }
    </ul>
</Section>
<style>
    ul {
        display: grid;
        grid-template-columns: repeat(
            auto-fit, 
            minmax(200px, 1fr));
        /* grid-template-columns: 1fr 1fr 1fr; */
        gap: 1rem;
        margin-inline: -16px;
    }
    article {
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 10px;
        display: flex;
        flex-direction: column;
        padding: 10px 16px 0px;
        height: 100%;
    }
    article header{
        flex: 1;
    }
    article h3 {
        margin-bottom: 4px;
    }
    article a {
        color: #111;
    }
    article a:hover {
        text-decoration: underline;
    }
    article p {
        font-size: 12px;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    footer {
         display: flex;
         flex-wrap: wrap;
         gap: 4px;
         font-size: 0.7rem;
         padding-bottom: 0.7rem;
    }
    footer span {
        border-radius: 6px;
        background: #eee;
        color: #444;
        font-size: 0.6rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }

</style>
